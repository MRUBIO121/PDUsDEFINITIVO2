# Energy Monitoring System - Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3001
APP_VERSION=1.0.0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# NENG API Configuration
NENG_API_URL=https://api.neng.com/v1/energy/racks
NENG_SENSORS_API_URL=https://api.neng.com/v1/energy/sensors
NENG_API_KEY=your_neng_api_key_here
API_TIMEOUT=10000

# Logging
LOG_LEVEL=info

# Security
SESSION_SECRET=your_session_secret_here

# Database (if needed for caching)
# DATABASE_URL=postgresql://user:password@localhost:5432/energy_monitor

# Monitoring
# SENTRY_DSN=https://your-sentry-dsn-here

# Email Alerts (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# SQL Server Configuration for Thresholds
SQL_SERVER_HOST=localhost
SQL_SERVER_DATABASE=energy_monitor_db
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=your_sql_server_password
SQL_SERVER_PORT=1433
SQL_SERVER_ENCRYPT=false

# Backend Polling Configuration
BACKEND_POLLING_INTERVAL=30000

# Backup/Storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=energy-monitoring-backups