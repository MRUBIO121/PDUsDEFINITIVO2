# Energy Monitoring System - Environment Variables

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Supabase Configuration (for future use)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Server Configuration
NODE_ENV=production
PORT=3001
APP_VERSION=1.0.0
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# NENG API Configuration
NENG_API_URL=https://api.neng.com/v1/energy/racks
NENG_SENSORS_API_URL=https://api.neng.com/v1/energy/sensors
NENG_API_KEY=your_neng_api_key_here
API_TIMEOUT=10000

# SQL Server Configuration
SQL_SERVER_HOST=localhost
SQL_SERVER_DATABASE=energy_monitor_db
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=your_sql_server_password_here
SQL_SERVER_PORT=1433
SQL_SERVER_ENCRYPT=false

# Polling Configuration
BACKEND_POLLING_INTERVAL=30000

# Session Configuration (Required for authentication)
SESSION_SECRET=your_session_secret_here_change_in_production

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Database (if needed for caching)
# DATABASE_URL=postgresql://user:password@localhost:5432/energy_monitor

# Monitoring
# SENTRY_DSN=https://your-sentry-dsn-here

# Email Alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Backup/Storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=energy-monitoring-backups